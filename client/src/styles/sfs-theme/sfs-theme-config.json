{
  "name": "SmartFlow Systems Theme",
  "version": "1.0.0",
  "description": "Luxurious dark marble brown-tinted black with sparkling gold accents",
  "author": "Gareth Bowers",

  "colors": {
    "primary": {
      "black": "#0D0D0D",
      "brown": "#3B2F2F",
      "gold": "#FFD700",
      "goldAccent": "#E6C200",
      "beige": "#F5F5DC",
      "white": "#FFFFFF"
    },
    "semantic": {
      "background": "hsl(0 0% 5%)",
      "surface": "hsl(0 8% 15%)",
      "surfaceElevated": "hsl(0 10% 20%)",
      "textPrimary": "hsl(40 56% 94%)",
      "textSecondary": "hsl(40 20% 70%)",
      "textTertiary": "hsl(40 10% 50%)",
      "accent": "hsl(51 100% 50%)",
      "accentHover": "hsl(49 100% 45%)"
    }
  },

  "spacing": {
    "1": "0.25rem",
    "2": "0.5rem",
    "3": "0.75rem",
    "4": "1rem",
    "5": "1.25rem",
    "6": "1.5rem",
    "8": "2rem",
    "10": "2.5rem",
    "12": "3rem",
    "16": "4rem",
    "20": "5rem"
  },

  "borderRadius": {
    "sm": "0.375rem",
    "md": "0.5rem",
    "lg": "0.75rem",
    "xl": "1rem",
    "2xl": "1.5rem",
    "full": "9999px"
  },

  "shadows": {
    "sm": "0 1px 2px 0 rgb(0 0 0 / 0.3)",
    "md": "0 4px 6px -1px rgb(0 0 0 / 0.5), 0 2px 4px -1px rgb(0 0 0 / 0.3)",
    "lg": "0 10px 15px -3px rgb(0 0 0 / 0.6), 0 4px 6px -2px rgb(0 0 0 / 0.4)",
    "xl": "0 20px 25px -5px rgb(0 0 0 / 0.7), 0 10px 10px -5px rgb(0 0 0 / 0.5)",
    "gold": "0 0 20px 0 rgb(255 215 0 / 0.15)"
  },

  "typography": {
    "fontFamily": {
      "sans": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
      "mono": "'JetBrains Mono', 'Fira Code', 'Courier New', monospace"
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem",
      "6xl": "3.75rem",
      "7xl": "4.5rem"
    },
    "fontWeight": {
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700,
      "extrabold": 800
    },
    "lineHeight": {
      "tight": 1.2,
      "normal": 1.6,
      "relaxed": 1.8
    }
  },

  "transitions": {
    "fast": "150ms cubic-bezier(0.4, 0, 0.2, 1)",
    "base": "300ms cubic-bezier(0.4, 0, 0.2, 1)",
    "slow": "500ms cubic-bezier(0.4, 0, 0.2, 1)",
    "bounce": "500ms cubic-bezier(0.68, -0.55, 0.265, 1.55)"
  },

  "glassmorphism": {
    "background": "hsl(0 8% 15% / 0.7)",
    "border": "hsl(51 100% 50% / 0.2)",
    "glow": "hsl(51 100% 50% / 0.1)",
    "blur": {
      "sm": "12px",
      "md": "16px",
      "lg": "20px"
    }
  },

  "circuitFlow": {
    "particleCount": 30,
    "nodeCount": 15,
    "pathCount": 12,
    "particleSpeed": 0.5,
    "glowIntensity": 0.3,
    "connectionDistance": 200,
    "colors": {
      "gold": "#FFD700",
      "goldAccent": "#E6C200",
      "brown": "#3B2F2F",
      "black": "#0D0D0D"
    }
  },

  "breakpoints": {
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1536px"
  },

  "zIndex": {
    "base": 0,
    "dropdown": 1000,
    "sticky": 1100,
    "fixed": 1200,
    "overlay": 1300,
    "modal": 1400,
    "popover": 1500,
    "tooltip": 1600
  }
}
